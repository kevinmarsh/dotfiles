# Keep my email address out of the public repo
%include ~/.hgrc.private

[ui]
ignore=~/.hgignore
merge=internal:merge
style= ~/dotfiles/hg_templates/map-cmdline.colorcompact
interface = curses

[extensions]
color=
graphlog=
record=
shelve=
rebase=
hgext.mq=
progress=
pager=
histedit=

[experimental]
crecord=TRUE

[pager]
pager=LESS='FSRX' less
ignore=version, help, update, serve, record

[diff]
git = 1
unified = 5
showfunc = 1

[alias]
secret=phase -fs
draft=phase -d
