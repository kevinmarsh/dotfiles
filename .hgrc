# Keep my email address out of the public repo
%include ~/.hgrc.private

[ui]
ignore = ~/.hgignore

[extensions]
color=
graphlog=
record= 
crecord=~/.hgext/crecord/
rebase= 
hgext.mq=
hgshelve=~/.hgext/hgshelve.py 
progress=
pager=

[pager]
pager = LESS='FSRX' less
ignore = version, help, update, serve, record

# See http://mercurial.selenic.com/wiki/MergingWithVim
[merge.tools]
vimdiff.executable = vim
vimdiff.args = -d $base $local $output $other +close +close

# For mq
[diff]
git = 1
unified = 5
showfunc = 1

[alias]
qstatus = status --rev qparent:.
qshelve = shelve --all -n qtemp
qunshelve = unshelve -n qtemp

